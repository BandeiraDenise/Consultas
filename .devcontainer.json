{
  "name": "Oracle Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "oracle",
  "workspaceFolder": "/workspaces/Consultas",
  "extensions": [
    "oracle.oracle-developer-tools-for-visual-studio-code",
  ],
  "settings": {
    "sqltools.connections": [
      {
        "name": "OracleDB",
        "driver": "Oracle",
        "server": "localhost",
        "port": 1521,
        "database": "ORCL",
        "username": "system",
        "password": "your_password",
        "connectString": "localhost:1521/ORCL"
      }
    ]
  },
  "postCreateCommand": "echo 'Container setup complete!'"
}
